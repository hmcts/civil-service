  "interactions": [
    {
      "description": "Create GovPay payment link for claim issue fee",
      "providerStates": [
        {
          "name": "Claim issue payment can be initiated for case 1234567890123456"
        }
      ],
      "request": {
        "method": "POST",
        "path": "/fees/CLAIMISSUED/case/1234567890123456/payment",
        "headers": {
          "Authorization": "Bearer some-auth-token",
          "Content-Type": "application/json"
        },
        "body": {}
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "externalReference": "2023-1701090705688",
          "paymentReference": "RC-1701-0909-0602-0418",
          "status": "Initiated",
          "nextUrl": "https://card.payments.service.gov.uk/secure/7b0716b2-40c4-413e-b62e-72c599c91960",
          "dateCreated": "2023-11-27T13:15:06.313+00:00"
        },
        "matchingRules": {
          "body": {
            "$.externalReference": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.paymentReference": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "RC-[0-9\\-]+"
                }
              ],
              "combine": "AND"
            },
            "$.status": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.nextUrl": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "https://.+"
                }
              ],
              "combine": "AND"
            },
            "$.dateCreated": {
              "matchers": [
                {
                  "match": "timestamp",
                  "timestamp": "yyyy-MM-dd'T'HH:mm:ss.SSSXXX"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;.*)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      }
    },
    {
      "description": "Retrieve GovPay payment status for claim issue fee",
      "providerStates": [
        {
          "name": "Payment status SUCCESS is available for payment RC-1701-0909-0602-0418"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/fees/CLAIMISSUED/case/1234567890123456/payment/RC-1701-0909-0602-0418/status",
        "headers": {
          "Authorization": "Bearer some-auth-token"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "externalReference": "2023-1701090705688",
          "paymentReference": "RC-1701-0909-0602-0418",
          "status": "Success",
          "paymentFor": "claimissued",
          "paymentAmount": 200
        },
        "matchingRules": {
          "body": {
            "$.externalReference": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.paymentReference": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "RC-[0-9\\-]+"
                }
